{
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "release": "node scripts/release.js",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "tslint -p src/tsconfig.app.json -c src/tslint.json \"packages/*/src/**/*.ts\"",
    "lint:style": "stylelint \"packages/*/src/**/*.less\" --syntax less --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "author": "fanzicai",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@microsoft/api-extractor": "^7.8.12",
    "@types/core-js": "^2.5.1",
    "@types/jquery": "^3.3.38",
    "@types/node": "^10.12.18",
    "@types/sortablejs": "^1.10.4",
    "autoprefixer": "^9.6.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "chalk": "^4.1.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "conventional-changelog-cli": "^2.0.31",
    "cross-env": "^7.0.2",
    "css-loader": "^3.0.0",
    "cssnano": "^4.1.10",
    "husky": "^4.2.5",
    "enquirer": "^2.3.5",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.1",
    "less-loader": "^6.1.0",
    "mini-css-extract-plugin": "^0.7.0",
    "minimist": "^1.2.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "semver": "^7.3.2",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.3",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "core-js": "^3.1.3",
    "jquery": "^3.5.0"
  },
  "browserslist": [
    "> 5% in CN",
    "Firefox > 50",
    "Chrome > 60"
  ],
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint:ts",
      "git add"
    ],
    "src/**/*.less": [
      "npm run lint:style",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
